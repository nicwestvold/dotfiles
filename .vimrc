
" show the line numbers
set number

" use spaces instead of tabs
set expandtab
set smarttab

" 1 tab == 2 spaces
set shiftwidth=2
set tabstop=2

" indentation
set ai " auto indent
set si " smart indent

"""""""""""""
" Status Line
"""""""""""""
" always show the status line
" set laststatus=2

" format the status line
" set statusline=\ %{HasPaste()}%F%m%r%h\ %w\ \ CWD:\ %r%{getcwd()}%h\ \ \ Line:\ %l\ \ Column:\ %c

" turn on syntax highlighting
syntax on
